<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/textbox"
        android:gravity="center"
        android:text="Chọn mô hình"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>


    <View
        android:layout_width="40px"
        android:layout_height="40px">
    </View>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="596dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="30px"
                    android:layout_height="50px"></View>

                <Button
                    android:id="@+id/nhasan"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/house_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Nhà sàn"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40px"
                    android:layout_height="40px">

                </View>

                <Button
                    android:id="@+id/trongdong"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/music_note_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Trống đồng"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40px"
                    android:layout_height="15px">

                </View>

                <Button
                    android:id="@+id/nonla"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/star_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Nón lá"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0px"
                android:layout_height="40px">

            </View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="30px"
                    android:layout_height="50px"></View>

                <Button
                    android:id="@+id/thuyen"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/houseboat_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Thuyền"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40px"
                    android:layout_height="40px">

                </View>

                <Button
                    android:id="@+id/gui"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/star_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Gùi"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40px"
                    android:layout_height="15px">

                </View>

                <Button
                    android:id="@+id/trangphuclao"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/apparel_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="TP Nữ Lào"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="40px"
                android:layout_height="40px">

            </View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="30px"
                    android:layout_height="50px"></View>

                <Button
                    android:id="@+id/tpnamlao"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button2"
                    android:drawableTop="@drawable/cancel_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="TP Nam Lào"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40px"
                    android:layout_height="40px">

                </View>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button2"
                    android:drawableTop="@drawable/cancel_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Voi"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40px"
                    android:layout_height="15px">

                </View>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button2"
                    android:drawableTop="@drawable/cancel_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Hộp đựng trấu"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0px"
                android:layout_height="40px">

            </View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="30px"
                    android:layout_height="50px"></View>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button2"
                    android:drawableTop="@drawable/cancel_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Kinh COran"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40px"
                    android:layout_height="20px">

                </View>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button2"
                    android:drawableTop="@drawable/cancel_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Ống đựng tên"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40px"
                    android:layout_height="15px">

                </View>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button2"
                    android:drawableTop="@drawable/cancel_48dp_fill0_wght400_grad0_opsz48"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:text="Liềm gặt"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/quitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:src="@drawable/close_48dp_fill0_wght400_grad0_opsz48"
        >

    </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </LinearLayout>


</LinearLayout>